#include<stdio.h>


	int main(){

	int i,j,o=1,h=3;

	for(i=1; i<=4; i++){
		for(j=4; j>o; j--){
		printf("  ");
		}
	
		while(j!=0){

		printf(" %d", i);
		
		j--;
		}
		printf("\n");
	o++;
		
	}
	o-=2;
	
	for(i=3; i>0; i--){
	h=i;
		for(j=2; j<o; j++){
		printf("  ");
		}
		while(h>0){

		printf("%2d", i);
		
		h--;
		}
		printf("\n");
	
	o++;
	}

	printf("%d", o);

	
	return 0;
}	
